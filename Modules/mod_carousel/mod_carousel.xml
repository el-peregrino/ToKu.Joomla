<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" client="site" method="upgrade">
    <name>ToKu Carousel</name>
    <version>1.0.3</version>
    <author>ToKu</author>
    <authorUrl>www.toku.cz</authorUrl>
    <license>GNU General Public License version 3 or later</license>
    <creationDate>2025-07-10</creationDate>
    <description>
    <![CDATA[
        <p><strong>Carousel Module</strong> displays given items in an infinite carousel.
        <ul>
            <li>Configurable</li>
            <li>Supports multiple layouts</li>
            <li>Built using Joomla 5 DI, dispatcher, and asset manager</li>
            <li>Uses ToKu Library</li>
        </ul>
    ]]>
    </description>
    <namespace path="src">ToKu\Module\Carousel</namespace>
    <files>
        <folder module="mod_carousel">services</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>forms</folder>
    </files>
    <media destination="mod_carousel" folder="media">
        <filename>joomla.asset.json</filename>
        <folder>css</folder>
    </media>
    <scriptfile>script.php</scriptfile>
    <config>
        <fields name="params">
            <fieldset name="basic">

                <field 
                    name="autoplay" 
                    type="radio" 
                    default="1" 
                    label="Automatic Slide" 
                    layout="joomla.form.field.radio.switcher"
                    required="true">
                    <option value="0">JNo</option>
                    <option value="1">JYes</option>
                </field>

                <field
                    name="interval"
                    type="number"
                    default="5000"
                    showon="autoplay:1"
                    label="Slide Interval"
                    description="The interval of item slides in milliseconds"
                    min="1000"/>

                <field
                    name="direction" 
                    type="list" 
                    default="left" 
                    showon="autoplay:1"
                    label="Slide Direction" >
                    <option value="left">Left</option>
                    <option value="right">Right</option>
                </field>

                <field
                    name="show_indicators" 
                    type="list" 
                    default="below" 
                    label="Controls position" >
                    <option value="none">None</option>
                    <option value="above">Above</option>
                    <option value="below">Below</option>
                </field>

                <field 
                    name="show_controls"
                    type="radio" 
                    default="1" 
                    label="Show Control Buttons" 
                    layout="joomla.form.field.radio.switcher">
                    <option value="0">JNo</option>
                    <option value="1">JYes</option>
                </field>

                <field
                    name="link_style" 
                    type="list" 
                    default="title" 
                    label="Link Style" >
                    <option value="title">Title</option>
                    <option value="card">Card</option>
                </field>

                <field 
                    name="show_image"
                    type="radio" 
                    default="1" 
                    label="Show Image" 
                    layout="joomla.form.field.radio.switcher">
                    <option value="0">JNo</option>
                    <option value="1">JYes</option>
                </field>

                <field 
                    name="link_image"
                    type="radio" 
                    showon="show_image:1[AND]link_style:title"
                    default="1" 
                    label="Link Image" 
                    layout="joomla.form.field.radio.switcher">
                    <option value="0">JNo</option>
                    <option value="1">JYes</option>
                </field>

                <field 
                    name="show_readmore"
                    type="radio" 
                    showon="link_style:title"
                    default="1" 
                    label="Show Readmore Button" 
                    layout="joomla.form.field.radio.switcher">
                    <option value="0">JNo</option>
                    <option value="1">JYes</option>
                </field>

            </fieldset>

            <fieldset name="items" label="Carousel Items">
                
                <field 
                    name="box_class"
                    type="text"
                    label="Item Class"
                    description="Additional styles for carousel items"
                    required="false"/>

                <field name="items"
                    type="subform"
                    multiple="true"
                    label="Carousel Items"
                    description="Add items to the carousel"
                    formsource="modules/mod_carousel/forms/item.xml"
                    min="2"
                    max="10" />

            </fieldset>

            <fieldset name="advanced">
				
                <field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="form-select"
					validate="moduleLayout" />
                
                <field 
                    name="module_class"
                    type="text"
                    label="Module Class"
                    description="Additional styles"
                    required="false"/>

            </fieldset>
        </fields>
    </config>
</extension>